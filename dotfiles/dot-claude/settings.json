  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "Bash(chmod:*)",
      "Bash(\"/Users/raphael/Library/Mobile Documents/iCloud~md~obsidian/Documents/my_vault/_Assets/claude_usage_log.json\")",
      "Bash(~/.claude/statusline.sh)",
      "Bash(mkdir -p:*)",
